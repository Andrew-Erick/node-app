extends ../../layout
block content
  .container-fluid
    .row
      main.col-sm-12.ml-sm-auto.col-md-12.pt-3(role="main")
        h3 project项目信息
        hr
        #projectserverToolbar
          button#projectserverRemove.btn.btn-danger(disabled)
            i.oi.oi-trash 删除
          span &nbsp;&nbsp;
          a.btn.btn-info(href="#",data-toggle="modal",data-target="#projectserverModal")#projectserverAdd
            i.oi.oi-plus 添加
          span &nbsp;&nbsp;
          select.form-control-static
            option(value="") Export Basic
            option(value="all") Export All
            option(value="selected") Export Selected
        table(data-toggle="table",data-toolbar="#projectserverToolbar",data-search="true",data-pagination="true",data-pagination-v-align="bottom",data-pagination-h-align="right",data-show-refresh="false",data-show-toggle="true",data-show-export="true",data-minimum-count-columns="2",data-show-pagination-switch="true",data-page-list="[10, 25, 50, 100, ALL]",data-advanced-search="true",data-show-footer="false",data-show-columns="true",data-click-to-select="true",data-id-field="id",data-url="/projectserver/data",data-data-type="json",data-method="get")#projectserverTable
          thead
            tr
              th(data-checkbox='true') 
              //- th(data-field="number",data-sortable="true") 编号
              th(data-field="id",data-sortable="true") ID
              th(data-field="name",data-sortable="true") 任务名称
              th(data-field="description",data-sortable="true") 任务描述
              th(data-field="pbs",data-sortable="true") 所属PBS
              th(data-field="input",data-sortable="true") 输入 
              th(data-field="output",data-sortable="true",data-editable="true") 输出 
              th(data-field="requirement",data-sortable="true",data-visible="false") 任务要求 
              th(data-field="stage",data-sortable="true" data-formatter="stageFormatter") 关键里程碑
              th(data-field="tools",data-sortable="true" data-visible="false") 工具 
              th(data-field="method",data-sortable="true" data-visible="false") 方法
              th(data-field="resource",data-sortable="true" data-visible="false") 资源名称 
              th(data-field="plan_start_time",data-sortable="true" data-visible="false") 计划开始时间 
              th(data-field="plan_end_time",data-sortable="true" data-visible="false") 计划完成时间
              th(data-field="start_time",data-sortable="true" data-visible="false") 开始时间 
              th(data-field="end_time",data-sortable="true" data-visible="false") 完成时间
              th(data-field="action",data-formattor="projectserverActionFormatter",data-events="projectserverActionEvents") 操作
   #projectserverModal.modal.fade
    .modal-dialog
        .modal-content
          form.form-horizontal(role="form",data-add="true")#projectserverForm
            .modal-header
              h4 企业过程信息
            .modal-body 
              .form-group
                label.col-sm-2.control-label ID
                .col-sm-8
                  input.form-control(name="id",type="text")
              .form-group
                label.col-sm-2.control-label 任务名称
                .col-sm-8
                  input.form-control(name="name",type="text")
              .form-group
                label.col-sm-2.control-label 任务描述
                .col-sm-8
                  input.form-control(name="description",type="text")
              .form-group
                label.col-sm-2.control-label 所属PBS
                .col-sm-8
                  select.form-control(name="pbs")
                    each pb in pbs
                      option(value=pb._id) #{pb.name}
              .form-group
                label.col-sm-2.control-label 输入
                .col-sm-8
                  input.form-control(name="input",type="text")
              .form-group
                label.col-sm-2.control-label 输出
                .col-sm-8
                  input.form-control(name="output",type="text")
              .form-group
                label.col-sm-2.control-label 任务要求
                .col-sm-8
                  input.form-control(name="requirement",type="text")
              //- .form-group
              //-   label.col-sm-2.control-label 关键里程碑
              //-   .col-sm-8
              //-     input.form-control(name="stage",type="text")
              .form-group
                label.col-sm-2.control-label 工具
                .col-sm-8
                  input.form-control(name="tools",type="text")
              .form-group
                label.col-sm-2.control-label 方法
                .col-sm-8
                  input.form-control(name="method",type="text")
              .form-group
                label.col-sm-2.control-label 资源名称
                .col-sm-8
                  input.form-control(name="resource",type="text")
              .form-group
                label.col-sm-2.control-label 计划开始时间
                .col-sm-8
                  input.form-control(name="plan_start_time",type="text")
              .form-group
                label.col-sm-2.control-label 计划完成时间
                .col-sm-8
                  input.form-control(name="plan_end_time",type="text")
              .form-group
                label.col-sm-2.control-label 开始时间
                .col-sm-8
                  input.form-control(name="start_time",type="text")
              .form-group
                label.col-sm-2.control-label 完成时间
                .col-sm-8
                  input.form-control(name="end_time",type="text")
            .modal-footer
                button.btn.btn-deafult(type="button",data-dismiss="modal") 关闭
                button.btn.btn-success(type="submit") 保存 
  script(src='js/projectserver.js')
        