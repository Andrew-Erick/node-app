extends ../../layout
block content
  .container-fluid
    .row
      main.col-sm-12.ml-sm-auto.col-md-12.pt-2(role="main")
        h4 研制程序-评审门信息
        hr
        #previewToolbar
          button#previewRemove.btn.btn-danger(disabled)
            i.oi.oi-trash 删除
          span &nbsp;&nbsp;
          a.btn.btn-info(href="#",data-toggle="modal",data-target="#previewModal")#previewAdd
            i.oi.oi-plus 添加
          span &nbsp;&nbsp;
          select.form-control-static
            option(value="") Export Basic
            option(value="all") Export All
            option(value="selected") Export Selected
        table(data-toggle="table",data-toolbar="#previewToolbar",data-search="true",data-pagination="true",data-pagination-v-align="bottom",data-pagination-h-align="right",data-show-refresh="false",data-show-toggle="true",data-show-export="true",data-minimum-count-columns="2",data-show-pagination-switch="true",data-page-list="[10, 25, 50, 100, ALL]",data-advanced-search="true",data-show-footer="false",data-show-columns="true",data-click-to-select="true",data-id-field="id",data-url="/preview/data",data-data-type="json",data-method="get")#previewTable
          thead
            tr
              th(data-checkbox='true') 
              //- th(data-field="number",data-sortable="true") 编号
              th(data-field="id",data-sortable="true") ID
              th(data-field="name",data-sortable="true") 阶段名称
              th(data-field="rules",data-sortable="true",data-width="40%") 准入准则
              th(data-field="standard",data-sortable="true",data-width="45%") 评审要求 
              th(data-field="action",data-formatter="previewFormatter"
              data-events="previewActionEvents") 操作
   #previewModal.modal.fade
    .modal-dialog
        .modal-content
          form.form-horizontal(role="form",data-add="true")#previewForm
            .modal-header
              h4 研制程序-评审门信息
            .modal-body 
              .form-group
                  label.col-sm-2.control-label ID
                  .col-sm-10
                    input.form-control.hidden(name="_id",type="text")
                    input.form-control(name="id",type="text")
              .form-group
                  label.col-sm-2.control-label 阶段名称
                  .col-sm-10
                    input.form-control(name="name",type="text")
              .form-group
                  label.col-sm-2.control-label 准入准则
                  .col-sm-10
                    textarea.form-control(name="rules",type="text",rows="6")
              .form-group
                  label.col-sm-2.control-label 评审要求
                  .col-sm-10
                    textarea.form-control(name="standard",type="text",rows="8")
            .modal-footer
                button.btn.btn-deafult(type="button",data-dismiss="modal") 关闭
                button.btn.btn-success(type="submit") 保存 
  script(src='js/preview.js')
        