extends ../../layout
block content
  .container-fluid
    .row
      main.col-sm-12.ml-sm-auto.col-md-12.pt-2(role="main")
        h4 项目-PBS
        hr
        #pbsToolbar
          button#pbsRemove.btn.btn-danger(disabled)
            i.oi.oi-trash 删除
          span &nbsp;&nbsp;
          a.btn.btn-info(href="#",data-toggle="modal",data-target="#pbsModal")#pbsAdd
            i.oi.oi-plus 添加
          span &nbsp;&nbsp;
          select.form-control-static
            option(value="") Export Basic
            option(value="all") Export All
            option(value="selected") Export Selected
        table(data-toggle="table",data-toolbar="#pbsToolbar",data-search="true",data-pagination="true",data-pagination-v-align="bottom",data-pagination-h-align="right",data-show-refresh="false",data-show-toggle="true",data-show-export="true",data-minimum-count-columns="2",data-show-pagination-switch="true",data-page-list="[10, 25, 50, 100, ALL]",data-advanced-search="true",data-show-footer="false",data-show-columns="true",data-click-to-select="true",data-id-field="id",data-data-type="json",data-method="get")#pbsTable
          thead
            tr
              th(data-checkbox='true') 
              //- th(data-field="number",data-sortable="false") 编号
              th(data-field="id",data-sortable="false") ID
              th(data-field="number",data-sortable="false") PBS编号
              th(data-field="name",data-sortable="false") PBS名称
              th(data-field="ata",data-sortable="false") ATA章节
              th(data-field="level",data-sortable="false") 层级 
              //- th(data-field="upper_pbs",data-sortable="false",data-formatter="upper_pbsFormatter") 上层PBS
              th(data-field="type",data-sortable="false",data-formatter="typePbsFormatter") 类别 
              th(data-field="action",data-formatter="pbsFormatter"
              data-events="pbsActionEvents") 操作
   #pbsModal.modal.fade
    .modal-dialog
        .modal-content
          form.form-horizontal(role="form",data-add="true")#pbsForm
            .modal-header
              h4 项目-PBS
            .modal-body 
              .form-group
                label.col-sm-2.control-label ID
                .col-sm-8
                  input.form-control(name="id",type="text")
                  input.form-control.hidden(name="_id",type="text")
                  input.hidden(name="pid",type="text")
                  input.hidden(name="level",type="text")
              .form-group
                label.col-sm-2.control-label PBS编号
                .col-sm-8
                  input.form-control(name="number",type="text")
              .form-group
                label.col-sm-2.control-label PBS名称
                .col-sm-8
                  input.form-control(name="name",type="text")
              .form-group
                label.col-sm-2.control-label ATA章节
                .col-sm-8
                  input.form-control(name="ata",type="text")
              //- .form-group
              //-   label.col-sm-2.control-label  上层PBS
              //-   .col-sm-8
              //-     select.form-control(name="upper_pbs")
              .form-group
                label.col-sm-2.control-label 类别
                .col-sm-8
                  select.form-control(name="type")
                    option(value="1") 飞机
                    option(value="2") 飞机系统
                    option(value="3") 飞机设备
            .modal-footer
                button.btn.btn-deafult(type="button",data-dismiss="modal") 关闭
                button.btn.btn-success(type="submit") 保存 
  script(src='js/pbs.js')
        